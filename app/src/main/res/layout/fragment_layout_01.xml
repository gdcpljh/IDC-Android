<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_fragment_bg"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_i"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/il_b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_i"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:orientation="vertical">

        <com.pixplicity.fontview.FontAppCompatTextView
            android:id="@+id/tv_judul_i"
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:lineSpacingExtra="8dp"
            android:layout_marginTop="12dp"
            android:text="Bantu Berikan Informasi Ke sesama orang serang"
            android:textColor="#4d5a52"
            android:textSize="18sp" />

        <com.pixplicity.fontview.FontAppCompatTextView
            style="@style/FontTextViewStyle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:text="Takbir"
            android:textAlignment="center"
            android:textColor="#7b868b"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>